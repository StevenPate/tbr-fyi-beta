# Supabase (Required)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-role-key
PUBLIC_SUPABASE_URL=https://your-project.supabase.co
PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Public Base URL (Required for SMS shelf links)
# Local: http://localhost:5173
# Production: https://your-app.vercel.app
PUBLIC_BASE_URL=http://localhost:5173

# Twilio (Required for SMS/MMS)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+15551234567

# Google Books API (Optional - increases rate limits)
GOOGLE_BOOKS_API_KEY=your-google-books-api-key

# Google Cloud Vision (Required for photo barcode scanning)
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=./service-account.json

# Trello (Required for feedback form)
TRELLO_API_KEY=your-trello-api-key
TRELLO_TOKEN=your-trello-token
TRELLO_BOARD_ID=your-trello-board-id
TRELLO_LIST_ID=your-trello-list-id
